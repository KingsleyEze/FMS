@model  FMS.Core.Model.BillReceivable
@{
    ViewData["Title"] = "Receipt Detail";
    Layout = "_Layout";
}



<div class="main-content">
    <div class="row">


        <!--
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        | Basic controls
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        !-->
        <div class="col-12">
            <div class="card">
                <h4 class="card-title">Receipt Detail</h4>
                <div class="card-body">
                    <form asp-action="SaveBill" asp-controller="BillReceivable">
                        <div class="row">

                            <div class="col-md-8">

                                <div class="row">

                                    <div class="col-md-6">
                                        <hr class="d-md-none">
                                        <label for="date">Date</label><br />
                                        <div class="form-group">
                                            <p class="form-control-plaintext">@Model.TransactionDate</p>
                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <hr class="d-md-none">
                                        <div class="form-group">
                                            <label>Payee</label>

                                            <p class="form-control-plaintext">@Model.PayeeId</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Description</label>

                                    <p class="form-control-plaintext">@Model.Description</p>
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" /><br class="clearfix" />
                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Organisation</label>
                                    <p class="form-control-plaintext">@Model.Organisation</p>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Economic</label>
                                    <p class="form-control-plaintext">@Model.Economic</p>
                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Fund</label>
                                    <p class="form-control-plaintext">@Model.Fund</p>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Geo Code</label>
                                    <p class="form-control-plaintext">@Model.GeoCode</p>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Function</label>
                                    <p class="form-control-plaintext">@Model.Fund</p>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Quantity</label>
                                    <p class="form-control-plaintext">@Model.Quantity</p>

                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Rate</label>

                                    <p class="form-control-plaintext">@Model.Rate</p>

                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Amount</label>


                                    <p class="form-control-plaintext">@Model.Amount</p>

                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />
                        @*<div class="row">

                            <div class="col-md-8">

                                <button type="submit" class="btn btn-w-md btn-bold btn-primary pull-right">Create</button>

                            </div>
                        </div>*@

                    </form>
                    <br class="clearfix" /><br class="clearfix" /><br class="clearfix" /><br class="clearfix" />
                </div>
            </div>
        </div>





    </div>
</div><!--/.main-content -->


