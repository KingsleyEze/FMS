<div class="col-md-6 col-lg-4">

    <div class="modal modal-center fade" id="modal-add-payment" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Payment</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="post" asp-action="AddPayment" asp-controller="Payment">
                    <input type="hidden" asp-for="BillNumber"/>
                    <div class="modal-body">
                        <div class="row">

                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <br class="clearfix"/>
                                <div class="row">

                                    <div class="col-md-12">
                                        <hr class="d-md-none">
                                        <div class="form-group">
                                            <label>Amount</label>
                                            <input type="text" class="form-control" asp-for="Amount" required/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <hr class="d-md-none">
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea type="text" class="form-control" asp-for="Description" rows="4" maxlenght="140" required></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">

                                        <button type="button" class="btn btn-bold btn-warning btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-bold btn-success btn-primary pull-right">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-md-8">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
