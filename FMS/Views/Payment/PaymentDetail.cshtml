@model  FMS.Models.Payment.AddPaymentView
@{
    ViewData["Title"] = "Payment Detail";
    Layout = "_Layout";

    var payable = Model.Payable;
    var paymentList = Model.Payments;

    decimal totalPayment = 0;
}



<div class="main-content">
    @if (TempData["PaymentError"] != null)
    {

        <div class="alert alert-danger">
            @TempData["PaymentError"].ToString() 
        </div>
    }
    <div class="row">

        <div class="col-lg-6">
            <div class="card">
                <h4 class="card-title"><strong>Payment Detail</strong></h4>
                <div class="card-body">
                    <form asp-action="SaveBill" asp-controller="BillPayable">
                        <div class="row">

                            <div class="col-md-8">

                                <div class="row">

                                    <div class="col-md-6">
                                        <hr class="d-md-none">
                                        <label for="date">Date</label><br/>
                                        <div class="form-group">
                                            <p class="form-control-plaintext">@payable.TransactionDate</p>
                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <hr class="d-md-none">
                                        <div class="form-group">
                                            <label>Bill From</label>

                                            <p class="form-control-plaintext">@payable.PayerId</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br class="clearfix"/>

                        <div class="row">
                            <div class="col-md-8">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Description</label>

                                    <p class="form-control-plaintext">@payable.Description</p>
                                </div>
                            </div>
                        </div>

                        <br class="clearfix"/><br class="clearfix"/>
                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Organisation</label>
                                    <p class="form-control-plaintext">@payable.Organisation</p>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Economic</label>
                                    <p class="form-control-plaintext">@payable.Economic</p>
                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Fund</label>
                                    <p class="form-control-plaintext">@payable.Fund</p>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Geo Code</label>
                                    <p class="form-control-plaintext">@payable.GeoCode</p>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Function</label>
                                    <p class="form-control-plaintext">@payable.Fund</p>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Quantity</label>
                                    <p class="form-control-plaintext">@payable.Quantity</p>

                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Rate</label>

                                    <p class="form-control-plaintext">@payable.Rate</p>

                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Amount</label>


                                    <p class="form-control-plaintext">@payable.Amount.ToString("#,##0.##")</p>

                                </div>
                            </div>
                        </div>
                        <br class="clearfix"/>
                        @*<div class="row">

                                <div class="col-md-8">

                                    <button type="submit" class="btn btn-w-md btn-bold btn-primary pull-right">Create</button>

                                </div>
                            </div>*@

                    </form>
                    <br class="clearfix"/><br class="clearfix"/><br class="clearfix"/><br class="clearfix"/>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-title">
                    <div class="row">
                        <div class="col-md-6"><h5>Payment History</h5>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-danger pull-right" data-toggle="modal" data-target="#modal-add-payment">Add Payment</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-responsive">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amout</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        @foreach (var line in paymentList)
                        {
                            <span style="display: none">@(totalPayment += Convert.ToDecimal(line.Amount))</span>
                            <tr>
                                <td>@line.TransactionDate</td>
                                <td>@line.Amount.ToString("#,##0.##")</td>
                                <td>@line.Description</td>
                            </tr>
                        }
                        <tr>
                            <td><strong>Total:</strong></td>
                            <td style="color: red;">@totalPayment.ToString("#,##0.##")</td>
                            <td></td>
                        </tr>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!--/.main-content -->


