<div class="col-md-6 col-lg-4">

    <div class="modal modal-center fade" id="modal-add-comment" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Comment</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form method="post" asp-action="ModifyStatus" asp-controller="BillReceivable">
                    
                    <input type="hidden" asp-for="Receivable.Id"/>

                    <input type="hidden" asp-for="Type"/>

                    <div class="modal-body">
                        <div class="row">

                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <br class="clearfix" />

                                <div class="row">
                                    <div class="col-md-12">
                                        <hr class="d-md-none">
                                        <div class="form-group">
                                            <label>Comment</label>
                                            <textarea type="text" asp-for="Comment" class="form-control"  rows="4" maxlenght="140" required></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">

                                        <button type="button" class="btn btn-bold btn-warning btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-bold btn-success btn-primary pull-right">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="row">
                            <div class="col-md-8">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    
    <script>
        app.ready(function () {

            $('.showModal').on('click', function () {

                var value = $(this).data("button-value");

                $('#Type').val(value);

            });
        });
    </script>
}


