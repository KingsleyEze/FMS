@using FMS.Utilities.Enums
@using Microsoft.CodeAnalysis
@model  FMS.Models.BillReceivable.ReceivableDetailView

@{
    ViewData["Title"] = "Bill Details";
    Layout = "_Layout";

    var receivable = Model.Receivable;
}


<div class="main-content">
    <div class="row">

        <div class="col-12">
            <div class="card">
                <h4 class="card-title">Bill Receivable Detail</h4>
                <div class="card-body">
                    <form asp-action="SaveBill" asp-controller="BillReceivable">
                        <div class="row">

                            <div class="col-md-8">

                                <div class="row">

                                    <div class="col-md-6">
                                        <hr class="d-md-none">
                                        <label for="date">Date</label><br />
                                        <div class="form-group">
                                            <p class="form-control-plaintext">@receivable.TransactionDate</p>
                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <hr class="d-md-none">
                                        <div class="form-group">
                                            <label>Bill To</label>

                                            <p class="form-control-plaintext">@receivable.PayeeId</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Description</label>

                                    <p class="form-control-plaintext">@receivable.Description</p>
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" /><br class="clearfix" />
                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Organisation</label>
                                    <p class="form-control-plaintext">@receivable.Organisation</p>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Economic</label>
                                    <p class="form-control-plaintext">@receivable.Economic.Description</p>
                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Fund</label>
                                    <p class="form-control-plaintext">@receivable.Fund.Description</p>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Geo Code</label>
                                    <p class="form-control-plaintext">@receivable.GeoCode</p>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Function</label>
                                    <p class="form-control-plaintext">@receivable.Function</p>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Quantity</label>
                                    <p class="form-control-plaintext">@receivable.Quantity</p>

                                </div>
                            </div>

                        </div>

                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Rate</label>

                                    <p class="form-control-plaintext">@receivable.Rate</p>

                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Amount</label>


                                    <p class="form-control-plaintext">@receivable.Amount.ToString("#,##0.##")</p>

                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">

                                @switch (receivable.Status)
                                {
                                    case BillStatusType.DRAFT:

                                        <button type="button" class="btn btn-w-md btn-bold btn-warning">Modify</button>
                                        <button type="button" class="btn btn-w-md btn-bold btn-success pull-right showModal"   data-toggle="modal" data-target="#modal-add-comment" data-button-value="FORWARDED">Forward</button>

                                        break;
                                    case BillStatusType.FORWARDED:

                                        <button type="button" class="btn btn-w-md btn-bold btn-danger showModal"  data-toggle="modal" data-target="#modal-add-comment" data-button-value="FORWARD_REJECTED">Reject</button>
                                        <button type="button" class="btn btn-w-md btn-bold btn-success pull-right showModal" data-toggle="modal" data-target="#modal-add-comment" data-button-value="REVIEWED">Approve</button>

                                        break;
                                    case BillStatusType.FORWARD_REJECTED:

                                        <button type="button" class="btn btn-w-md btn-bold btn-danger">Modify</button>
                                        <button type="button" class="btn btn-w-md btn-bold btn-success pull-right showModal" data-toggle="modal" data-target="#modal-add-comment" data-button-value="FORWARDED">Approve</button>

                                        break;
                                    case BillStatusType.REVIEWED:

                                        <button type="button" class="btn btn-w-md btn-bold btn-danger showModal" data-toggle="modal" data-target="#modal-add-comment" data-button-value="REVIEW_REJECTED">Reject</button>
                                        <button type="button" class="btn btn-w-md btn-bold btn-success pull-right showModal"  data-toggle="modal" data-target="#modal-add-comment" data-button-value="APPROVED">Approve</button>

                                        break;
                                    case BillStatusType.REVIEW_REJECTED:

                                        <button type="button" class="btn btn-w-md btn-bold btn-danger showModal"  data-toggle="modal" data-target="#modal-add-comment" data-button-value="FORWARD_REJECTED">Reject</button>
                                        <button type="button" class="btn btn-w-md btn-bold btn-success pull-right showModal" data-toggle="modal" data-target="#modal-add-comment" data-button-value="REVIEWED">Approve</button>

                                        break;
                                    case BillStatusType.APPROVED:
                                        

                                        break;
                                }




                            </div>
                        </div>

                    </form>
                    <br class="clearfix" /><br class="clearfix" /><br class="clearfix" /><br class="clearfix" />
                </div>
            </div>
        </div>

    </div>
</div><!--/.main-content -->

<!--
|‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
