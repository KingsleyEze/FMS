                        <div class="row">


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Amount <span class="req">*</span></label>


                                    <input type="text" class="form-control amount" placeholder="Enter Amount" asp-for="Amount" required/>

                                </div>
                            </div>
                        </div>


                        <br class="clearfix"/>
                        <div class="row">

                            <div class="col-md-8">

                                <button type="submit" class="btn btn-w-md btn-bold btn-primary pull-right">Save</button>

                            </div>
                        </div>

                    </form>
                    <br class="clearfix" /><br class="clearfix" /><br class="clearfix" /><br class="clearfix" />
                </div>
            </div>
        </div>





