@using FMS.Core.ViewModel.Budget
@model FMS.Core.ViewModel.Budget.CreateBudgetView
@{
    ViewData["Title"] = "Create Budget";
    Layout = "_Layout"; 
}




<div class="main-content">
    <div class="row">

        <div class="col-12">
            <div class="card">
                <h4 class="card-title">Bill Receivable - Create</h4>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="SaveBudget" asp-controller="Budget">
                        
                        <input type="hidden" asp-for="Id"/>
                        <input type="hidden" asp-for="PreviousAmount"/>
                        <div class="row">

                            <div class="col-md-8">

                                <div class="row">

                                    <div class="col-md-6">
                                        <hr class="d-md-none">
                                        <label for="date">Date</label><br/>
                                        <div class="input-group  required">
                                            <input type="text" class="form-control date" placeholder="Date" asp-for="TransactionDate" readonly/>
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>

                        <br class="clearfix"/>

                        <div class="row">
                            <div class="col-md-8">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Description <span class="req">*</span></label>
                                    <textarea type="text" class="form-control" asp-for="Description" maxlenght="140" rows="6" required></textarea>
                                </div>
                            </div>
                        </div>

                        <br class="clearfix"/><br class="clearfix"/>
                        <h5 class="alert alert-info">Classification</h5><hr/>
                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Economic <span class="req">*</span></label>
                                    <select class="form-control" asp-for="Economic" required>
                                        <option value="">-- Select Economic --</option>
                                        @foreach (var economic in Model.LineItemList)
                                        {
                                            <option value="@economic.Id">@economic.Description</option>
                                        }
                                    </select>
                                </div>
                            </div>


                        </div>

