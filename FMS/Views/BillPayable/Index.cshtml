@{
    Layout = "_Layout";
}


@if (TempData["AlertMessage"] != null)
{

    <div class="alert alert-success">
        @TempData["AlertMessage"] 
    </div>
}

<div class="main-content">
    <div class="row">

        <div class="col-12">
            <div class="card">
                <h4 class="card-title"><strong>Payables</strong></h4>
                <div class="card-body  dashboard-links">

                    <div class="row">


                        <div class="col-sm-3 text-center">
                            <a href="/BillPayable/CreateBill">
                                <i class="fa fa-pencil-square-o"></i><br>
                                <h5>Create Bill</h5>
                            </a>
                        </div>



                        <div class="col-sm-3 text-center">
                            <a href="/BillPayable/BillList?billStatus=DRAFT">
                                <i class="fa fa-tasks"></i><br>
                                <h5>Drafted Bills</h5>
                            </a>
                        </div>

                        <div class="col-sm-3 text-center">
                            <a href="/BillPayable/BillList?billStatus=FORWARDED">
                                <i class="fa fa-chevron-circle-right"></i><br>
                                <h5>Forwarded Bills</h5>
                            </a>
                        </div>
                        

                        <div class="col-sm-3 text-center">
                            <a href="/BillPayable/BillList?billStatus=REVIEWED">
                                <i class="fa fa-tags"></i><br>
                                <h5>Reviewed Bills</h5>
                            </a>
                        </div>

                        <div class="col-sm-3 text-center">
                            <a href="/BillPayable/BillList?billStatus=APPROVED">
                                <i class="fa fa-check-square-o"></i><br>
                                <h5>Approved Bills</h5>
                            </a>
                        </div>


                        <div class="col-sm-3 text-center">
                            <a href="/BillPayable/BillList?billStatus=FORWARD_REJECTED">
                                <i class="fa fa-minus-square"></i><br>
                                <h5>Rejected Forward Bills</h5>
                            </a>
                        </div>
                        

                        <div class="col-sm-3 text-center">
                            <a href="/BillPayable/BillList?billStatus=REVIEW_REJECTED">
                                <i class="fa fa-minus-square"></i><br>
                                <h5>Rejected Review Bills</h5>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
