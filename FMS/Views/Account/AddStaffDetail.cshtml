@using FMS.Core.ViewModel.Account
@model FMS.Core.ViewModel.Account.StaffDetailView
@{
    ViewData["Title"] = "Add Staff Detail";
    Layout = "_Layout";
}


<div class="main-content">
    <div class="row">


        <!--
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        | Basic controls
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        !-->
        <div class="col-12">
            <div class="card">
                <h4 class="card-title">Add User - Staff Details</h4>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 80%"></div>
                </div>
                <div class="card-body">
                    <form asp-action="SaveStaffDetail" asp-controller="Account" method="post">

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Title: </label>
                                    <input type="text" class="form-control" placeholder="Enter Title" asp-for="Title" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Rank <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter Rank" asp-for="Rank" />
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" />
                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Grade Level: </label>
                                    <input type="text" class="form-control" placeholder="Enter Grade Level" asp-for="GradeLevel" />
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Date Of First Appointment: </label>
                                    <div class="input-group  required">
                                        <input type="text" class="form-control" placeholder="Pick Date" asp-for="DateOfFirstAppoint" data-provide="datepicker" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <label for="date">Date Of Current Appointment</label><br />
                                <div class="input-group  required">
                                    <input type="text" class="form-control" placeholder="Pick Date" asp-for="DateOfCurrentAppoint" data-provide="datepicker" />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Department: </label>
                                    <select asp-for="Department" class="form-control">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Division <span class="req">*</span></label>
                                    <select asp-for="Division" class="form-control">
                                        <option value="">-- Select Division --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Section: </label>
                                    <select asp-for="Section" class="form-control">
                                        <option value="">-- Select Section --</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Note <span class="req">*</span></label>
                                    <textarea type="text" asp-for="Notes" class="form-control"  maxlenght="140" rows="6" required></textarea>
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-w-md btn-bold btn-primary pull-right">Next</button>
                            </div>
                        </div>

                    </form>
                    <br class="clearfix" /><br class="clearfix" /><br class="clearfix" /><br class="clearfix" />
                </div>
            </div>
        </div>





    </div>
</div><!--/.main-content -->

