@{
    ViewData["Title"] = "Add User Detail";
    Layout = "_Layout";
}


<div class="main-content">
    <div class="row">


        <!--
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        | Basic controls
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        !-->
        <div class="col-12">
            <div class="card">
                <h4 class="card-title">Add User - User Details</h4>
                <div class="card-body">
                    <form asp-action="SaveUserDetail" asp-controller="Account" method="post">
                        
                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>First Name: </label>
                                    <input type="text" class="form-control" placeholder="Enter First Name" name="FirstName"/>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Last Name <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter Last Name"  name="LastName" />
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" />
                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Middle Name: </label>
                                    <input type="text" class="form-control" placeholder="Enter Middle Name" name="MiddleName" />
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Phone Number: </label>
                                    <input type="text" class="form-control" placeholder="Enter Phone Number" name="Phone" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Email Address <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter Email Address" name="EmailAddress" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />
                        
                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Website: </label>
                                    <input type="text" class="form-control" placeholder="Enter Website" name="Website" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Address: </label>
                                    <input type="text" class="form-control" placeholder="Enter Address" name="Address" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>City <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter City" name="City" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Country: </label>
                                    <input type="text" class="form-control" placeholder="Select Country" name="Country" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>State <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Select State"  name="State" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />



                        <div class="row">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-w-md btn-bold btn-primary pull-right">Next</button>
                            </div>
                        </div>

                    </form>
                    <br class="clearfix" /><br class="clearfix" /><br class="clearfix" /><br class="clearfix" />
                </div>
            </div>
        </div>





    </div>
</div><!--/.main-content -->
