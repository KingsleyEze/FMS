@model FMS.Models.Account.UserDetailView
@{
    ViewData["Title"] = "Add User Detail";
    Layout = "_Layout";
}


<div class="main-content">
    <div class="row">


        <!--
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        | Basic controls
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        !-->
        <div class="col-12">
            <div class="card">
                <h4 class="card-title">Add User - User Details</h4>
                <div class="card-body">
                    <form asp-action="SaveUserDetail" asp-controller="Account" method="post">
                        
                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>First Name: </label>
                                    <input type="text" class="form-control" placeholder="Enter First Name" asp-for="FirstName"/>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Last Name <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter Last Name"  asp-for="LastName" />
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" />
                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Middle Name: </label>
                                    <input type="text" class="form-control" placeholder="Enter Middle Name" asp-for="MiddleName" />
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>User Type<span class="req">*</span>: </label>
                                    <select asp-for="State" class="form-control">
                                        <option value="">-- Select User Type --</option>
                                        <option value="Customer">Customer</option>
                                        <option value="Staff">Staff</option>
                                        <option value="Supplier">Supplier</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Phone Number <span class="req">*</span>: </label>
                                    <input type="text" class="form-control" placeholder="Enter Phone Number" asp-for="Phone" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Email Address <span class="req">*</span>: </label>
                                    <input type="text" class="form-control" placeholder="Enter Email Address" asp-for="EmailAddress" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />
                        
                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Website: </label>
                                    <input type="text" class="form-control" placeholder="Enter Website" asp-for="Website" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Address: </label>
                                    <input type="text" class="form-control" placeholder="Enter Address" asp-for="Address" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>City <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter City" asp-for="City" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Country: </label>
                                    <input type="text" class="form-control" placeholder="Select Country" asp-for="Country" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>State <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Select State"  asp-for="State" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />



                        <div class="row">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-w-md btn-bold btn-primary pull-right">Next</button>
                            </div>
                        </div>

                    </form>
                    <br class="clearfix" /><br class="clearfix" /><br class="clearfix" /><br class="clearfix" />
                </div>
            </div>
        </div>





    </div>
</div><!--/.main-content -->
