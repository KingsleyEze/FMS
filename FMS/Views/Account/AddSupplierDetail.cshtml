
@{
    ViewData["Title"] = "Add Supplier Detail";
    Layout = "_Layout";
}


<div class="main-content">
    <div class="row">


        <!--
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        | Basic controls
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        !-->
        <div class="col-12">
            <div class="card">
                <h4 class="card-title">Add User - Supplier Details</h4>
                <div class="card-body">
                    <form asp-action="SaveSupplierDetail" asp-controller="Account" method="post">

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Company Name: </label>
                                    <input type="text" class="form-control" placeholder="Enter Company Name" name="FirstName" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Contact Name <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter Last Name" name="LastName" />
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" />

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Office Phone: </label>
                                    <input type="text" class="form-control" placeholder="Enter Middle Name" name="MiddleName" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Mobile: </label>
                                    <input type="text" class="form-control" placeholder="Enter Middle Name" name="MiddleName" />
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Email Address: </label>
                                    <input type="text" class="form-control" placeholder="Enter Middle Name" name="MiddleName" />
                                </div>
                            </div>


                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Website: </label>
                                    <input type="text" class="form-control" placeholder="Enter Middle Name" name="MiddleName" />
                                </div>
                            </div>
                            

                        </div>
                        <br class="clearfix" />

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Address: </label>
                                    <input type="text" class="form-control" placeholder="Enter Middle Name" name="MiddleName" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>City: </label>
                                    <input type="text" class="form-control" placeholder="Enter Middle Name" name="MiddleName" />
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Country: </label>
                                    <input type="text" class="form-control" placeholder="Enter Phone Number" name="BVN" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>State <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter Email Address" name="TIN" />
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Note <span class="req">*</span></label>
                                    <textarea type="text" class="form-control" maxlenght="140" rows="6" required></textarea>
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-w-md btn-bold btn-primary pull-right">Next</button>
                            </div>
                        </div>

                    </form>
                    <br class="clearfix" /><br class="clearfix" /><br class="clearfix" /><br class="clearfix" />
                </div>
            </div>
        </div>





    </div>
</div><!--/.main-content -->

