@model FMS.Models.Account.SupplierDetailView
@{
    ViewData["Title"] = "Add Supplier Detail";
    Layout = "_Layout";

    var stateList = Model.StateList;
    var countryList = Model.CountryList;
}


<div class="main-content">
    <div class="row">


        <!--
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        | Basic controls
        |‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒‒
        !-->
        <div class="col-12">
            <div class="card">
                <h4 class="card-title">Add User - Supplier Details</h4>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 80%"></div>
                </div>
                <div class="card-body">
                    <form asp-action="SaveSupplierDetail" asp-controller="Account" method="post">

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Company Name: </label>
                                    <input type="text" class="form-control" placeholder="Enter Company Name" asp-for="CompanyName" />
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Contact Name <span class="req">*</span></label>
                                    <input type="text" class="form-control" placeholder="Enter Contact Name" asp-for="ContactName" />
                                </div>
                            </div>
                        </div>

                        <br class="clearfix" />

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Office Phone: </label>
                                    <input type="text" class="form-control" placeholder="Enter Office Phone" asp-for="OfficePhone" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Mobile: </label>
                                    <input type="text" class="form-control" placeholder="Enter Moblle Number" asp-for="Mobile" />
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Email Address: </label>
                                    <input type="text" class="form-control" placeholder="Enter Email Address" asp-for="Email" />
                                </div>
                            </div>


                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Website: </label>
                                    <input type="text" class="form-control" placeholder="Enter Website URL" asp-for="Website"/>
                                </div>
                            </div>
                            

                        </div>
                        <br class="clearfix" />

                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Address: </label>
                                    <input type="text" class="form-control" placeholder="Enter Address" asp-for="Address" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>City: </label>
                                    <input type="text" class="form-control" placeholder="Enter City" asp-for="City" />
                                </div>
                            </div>

                        </div>
                        <br class="clearfix" />


                        <div class="row">

                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Country: </label>
                                    <select asp-for="Country" class="form-control">
                                        <option value="">-- Select Country --</option>
                                        @foreach (var country in countryList)
                                        {
                                            <option value="@country.Id">@country.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>


                            <div class="col-md-4">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>State <span class="req">*</span></label>
                                    <select asp-for="State" class="form-control">
                                        <option value="">-- Select State --</option>
                                        @foreach (var state in stateList)
                                        {
                                            <option value="@state.Id">@state.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">
                                <hr class="d-md-none">
                                <div class="form-group">
                                    <label>Note <span class="req">*</span></label>
                                    <textarea type="text" asp-for="Notes" class="form-control" maxlenght="140" rows="6" required></textarea>
                                </div>
                            </div>
                        </div>
                        <br class="clearfix" />

                        <div class="row">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-w-md btn-bold btn-primary pull-right">Next</button>
                            </div>
                        </div>

                    </form>
                    <br class="clearfix" /><br class="clearfix" /><br class="clearfix" /><br class="clearfix" />
                </div>
            </div>
        </div>





    </div>
</div><!--/.main-content -->

